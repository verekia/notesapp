{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext", // auto-filled by Next but does not seem required. Breaks ts-node.
    // See: https://github.com/vercel/next.js/issues/7361
    // Alternatively, split into a 2nd file tsconfig file:
    // https://github.com/typeorm/typeorm/issues/5087#issuecomment-557385885
    // "module": "commonjs",
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
